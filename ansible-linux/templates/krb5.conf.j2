# To opt out of the system crypto-policies configuration of krb5, remove the
# symlink at /etc/krb5.conf.d/crypto-policies which will not be recreated.
#
# {{ ansible_managed }} ; do not edit

includedir /etc/krb5.conf.d/

[libdefaults]
  default_realm = {{ kerberos_ipa1 }}
  dns_lookup_realm = true
  dns_lookup_kdc = true
  rdns = false
  # https://source.redhat.com/departments/it/identityaccessmanagement/identity__access_management_blog/kerberos_client_config_changing_to_dns_canonicalize_hostname__false_chg0048363
  # fallback = Try “false” first.  Then try “true”.
  dns_canonicalize_hostname = fallback
  ticket_lifetime = 24h
  forwardable = true
  udp_preference_limit = 0
  default_ccache_name = KEYRING:persistent:%{uid}

[realms]

    {{ kerberos_domain1 }} = {
        default_domain = {{ kerberos_domain2 }}
        dns_lookup_kdc = true
        master_kdc =  {{ kerberos_kdc }}
        admin_server = {{ kerberos_kdc }}
    }

    {{ kerberos_ipa1 }} = {
       pkinit_anchors = FILE:/etc/ipa/ca.crt
       pkinit_pool = FILE:/etc/ipa/ca.crt
       default_domain = {{ kerberos_ipa2 }}
       dns_lookup_kdc = true
       # Trust tickets issued by legacy realm on this host
       auth_to_local = {{ kerberos_auth }}
       auth_to_local = DEFAULT
    }

